menuconfig LQ_DRIVER
    bool "Layered Queue Driver Support"
    help
      Enable support for layered queue drivers that provide
      declarative data pipelines with range validation, redundancy,
      and fault detection.

if LQ_DRIVER

module = LQ
module-str = layered_queue
source "subsys/logging/Kconfig.template.log_config"

config LQ_QUEUE
    bool "Queue Driver"
    default y
    help
      Enable the basic queue driver for buffering data items.

config LQ_ADC_SOURCE
    bool "ADC Source Driver"
    depends on ADC
    help
      Enable ADC source driver for reading analog inputs
      with range validation.

config LQ_SPI_SOURCE
    bool "SPI Source Driver"
    depends on SPI
    help
      Enable SPI source driver for reading digital sensors
      with expected value validation.

config LQ_MERGE_VOTER
    bool "Merge/Voter Driver"
    help
      Enable merge and voting driver for redundant inputs.

config LQ_DUAL_INVERTED
    bool "Dual-Inverted Input Driver"
    depends on GPIO
    help
      Enable dual-inverted input driver for complementary
      safety signals.

config LQ_PROTOCOL_J1939
    bool "J1939 Protocol Driver"
    help
      Enable J1939 protocol driver for SAE J1939 CAN networks.
      Supports PGN-based messaging with cyclic transmission.

config LQ_PROTOCOL_CANOPEN
    bool "CANopen Protocol Driver"
    help
      Enable CANopen protocol driver (DS-301).
      Supports PDO, NMT, Heartbeat, and Emergency messages.

config LQ_INIT_PRIORITY
    int "Layered Queue initialization priority"
    default 80
    help
      Initialization priority for layered queue infrastructure.

endif # LQ_DRIVER
